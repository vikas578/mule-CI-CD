	<flow name="walkthrough4-2Flow" doc:id="b517ede7-cd3e-42db-a5a0-3f6d7b8cc092" >
		<http:listener doc:name="getflights" doc:id="18c54d25-597f-463c-a780-b70483f94314" path="/flights" config-ref="HTTP_Listener_config"/>
		<db:select doc:name="Select" doc:id="550ef756-5605-4324-a12a-2be87c2de258" config-ref="Database_Config">
			<db:sql >select  *  from american</db:sql>
		</db:select>
		<ee:transform doc:name="Transform Message" doc:id="45ab5533-758f-4f56-aad9-951fa835611a">
			<ee:message>
				<ee:set-payload><![CDATA[%dw 2.0
output application/json
---
payload map ( payload01 , indexOfPayload01 ) -> {
	CID: payload01.ID,
	code: (payload01.code1 default "") ++ (payload01.code2 default ""),
	price: payload01.price default 0,
	origin: payload01.fromAirport default "",
	destination: payload01.toAirport default "",
	emptySeats: payload01.seatsAvailable default 0,
	plane: {
		"type": payload01.planeType default "",
		totalSeats: payload01.totalSeats default 0
	}
}]]></ee:set-payload>
			</ee:message>
		</ee:transform>
